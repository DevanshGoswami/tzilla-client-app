{
  "expo": {
    "name": "TrainZilla",
    "slug": "trainzilla-client",
    "version": "2.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "trainzillaclient",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "icon": "./assets/images/icon.png",
      "supportsTablet": true,
      "bundleIdentifier": "com.devops.tzilla.trainzillaclient",
      "googleServicesFile": "./GoogleService-Info.plist",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "versionCode": 2,
      "icon": "./assets/icons/android/res/mipmap-xxxhdpi/ic_launcher.png",
      "adaptiveIcon": {
        "foregroundImage": "./assets/icons/android/res/mipmap-xxxhdpi/ic_launcher_foreground.png",
        "backgroundImage": "./assets/icons/android/res/mipmap-xxxhdpi/ic_launcher_background.png"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.devops.tzilla.trainzillaclient",
      "softwareKeyboardLayoutMode": "resize",
      "googleServicesFile": "./google-services.json",
      "permissions": ["android.permission.POST_NOTIFICATIONS"]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "@react-native-google-signin/google-signin",
        {
          "iosUrlScheme": "com.googleusercontent.apps.625584220069-rj7f2av33akr45p3aued4vcdf49fml38"
        }
      ],
      "@react-native-firebase/app",
      "@react-native-firebase/messaging",
      "expo-notifications",
      "expo-sensors",
      [
        "expo-splash-screen",
        {
          "image": "./assets/splash.png",
          "resizeMode": "cover",
          "backgroundColor": "#050111"
        }
      ],
      "expo-secure-store"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "54502034-d6aa-4bca-b8ab-71c5b19a5e4f"
      }
    }
  }
}
